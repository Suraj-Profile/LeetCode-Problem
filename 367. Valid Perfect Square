class Solution:
    def isPerfectSquare(self, num: int) -> bool:
        lo = 1
        hi = num
        
        while lo <= hi:
            mid = (lo + hi) // 2
            val = mid * mid
            
            if val == num:
                return True
            elif val < num:
                lo = mid + 1
            else:
                hi = mid - 1
        
        return False
