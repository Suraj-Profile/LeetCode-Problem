class Solution:
    def twoSum(self, nums: List[int], tgt: int) -> List[int]:
        l, r = 0, len(nums) - 1
        while l < r:
            s = nums[l] + nums[r]
            if s == tgt:
                return [l + 1, r + 1]
            elif s < tgt:
                l += 1
            else:
                r -= 1
